<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".LoginActivity">


    <EditText
        android:id="@+id/txt_username"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/txtcorner"
        android:drawableLeft="@drawable/ic_person"
        android:fontFamily="@font/poppins_bold"
        android:hint="  User Name or Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/txt_pswrd"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_below="@+id/txt_username"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/txtcorner"
        android:drawableLeft="@drawable/ic_password"
        android:fontFamily="@font/poppins_bold"
        android:hint="  Password"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_google"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_below="@+id/txt_or"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/googlecorner"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Continue with Google"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/txt_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/poppins"
        android:text="New to Kisan Bazar?"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/txt_new"
        android:fontFamily="@font/poppins_semibold"
        android:text="Sign Up"
        android:textColor="#0E7E5D"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_signUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/poppins"
        android:text="--------------------or--------------------"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txt_pswrd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/btncorner"
        android:fontFamily="@font/poppins_bold"
        android:text="Log In"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />



    <ImageView
        android:id="@+id/img_google"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/txt_or"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="88dp"
        android:src="@drawable/google_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/rammetto_one"
        android:text="WELCOME!"
        android:textColor="#53A894"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/txt_google"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />


</RelativeLayout>