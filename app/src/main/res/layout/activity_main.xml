<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDFAF7"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        />

    <TextView
        android:id="@+id/txt_kisan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_image"
        android:layout_centerInParent="true"
        android:fontFamily="@font/poppins_semibold"
        android:text="Kisan Bazar"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/txt_Quotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_kisan"
        android:layout_centerInParent="true"
        android:fontFamily="@font/poppins_semibold"
        android:text="Let's connect the farmers to the world"
        android:textSize="12sp" />




</RelativeLayout>